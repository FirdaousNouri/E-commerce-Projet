            @section scripts {
                
                <script>
                    function confirmerSuppression() {
                        if (confirm("Êtes-vous sûr de vouloir supprimer cet élément ?")) {
                            // Si l'utilisateur clique sur OK, soumettre le formulaire
                            document.getElementById("form-suppression").submit();
                        } else {
                            alert("La suppression a été annulée.");

                        }
                    }
                </script>
               
                }
            

            <form id="form-suppression" asp-action="Delete" >
        <input type="hidden" asp-for="id" />
                <input type="submit" value="Delete" class="btn btn-danger" onclick="confirmerSuppression()" />
            </form>
</div>

